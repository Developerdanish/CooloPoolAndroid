<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_marginBottom="3dp"
    android:elevation="2dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurants_list_item_picture_imageView"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:src="@drawable/pic3"
            android:background="@drawable/hotel_image_background"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/restaurants_list_item_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hudson"
            android:fontFamily="@font/glacial_indifference_bold"
            android:layout_toRightOf="@id/restaurants_list_item_picture_imageView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/restaurants_list_item_type_of_food_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_toRightOf="@id/restaurants_list_item_picture_imageView"
            android:layout_below="@id/restaurants_list_item_name_textView"
            android:text="Indian | Italian"
            android:textColor="@color/BattleshipGrey"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/restaurants_list_item_veg_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_toRightOf="@id/restaurants_list_item_picture_imageView"
            android:layout_below="@id/restaurants_list_item_type_of_food_textView"
            android:text="Veg"
            android:textColor="@color/veg"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/restaurants_list_item_veg_separator_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_toRightOf="@id/restaurants_list_item_veg_textView"
            android:layout_below="@id/restaurants_list_item_type_of_food_textView"
            android:text=" | "
            android:textColor="@color/BattleshipGrey"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/restaurants_list_item_non_veg_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_toRightOf="@id/restaurants_list_item_veg_separator_textView"
            android:layout_below="@id/restaurants_list_item_type_of_food_textView"
            android:text="Non-Veg"
            android:textColor="@color/non_veg"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/restaurants_list_item_cost_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/restaurants_list_item_picture_imageView"
            android:text="â‚¹500"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/BattleshipGrey"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>


        <ImageView
            android:id="@+id/restaurants_list_item_go_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_restaurants_go_button"
            android:foregroundTint="@color/transparent"/>

        <TextView
            android:id="@+id/restaurants_list_item_opening_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_indifference_regular"
            android:layout_toLeftOf="@id/restaurants_list_item_go_imageView"
            android:layout_below="@id/restaurants_list_item_veg_separator_textView"
            android:text="9:00 Am"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/restaurants_list_item_closing_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/restaurants_list_item_go_imageView"
            android:layout_below="@id/restaurants_list_item_opening_time_textView"
            android:text="8:00 Pm"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/glacial_indifference_regular"
            android:textSize="12dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>