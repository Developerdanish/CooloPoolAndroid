<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ScrollView
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">


                <RelativeLayout
                    android:id="@+id/profile_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:id="@+id/profile_image_container_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_profile_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="left"
                            android:elevation="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userfacepic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/profile_profile_image"
                            android:layout_centerVertical="true">

                            <LinearLayout
                                android:id="@+id/trips_linearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/profile_profile_image"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/live_trips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="13"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/glacial_indifference_bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/glacial_indifference_regular"
                                    android:text="Trips"
                                    android:lines="1"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/followbtn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/trips_linearLayout"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/live_followers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="13"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/glacial_indifference_bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/glacial_indifference_regular"
                                    android:text="Followers"
                                    android:lines="1"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/followbtn"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/live_photos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="13"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/glacial_indifference_bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/glacial_indifference_regular"
                                    android:text="Photos"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image_container_top_layout"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/settingbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Setting"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="6dp"
                            android:fontFamily="@font/glacial_indifference_bold"
                            android:background="@color/transparent_blur_side_menu"/>

                        <TextView
                            android:id="@+id/editProfileButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edit profile"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="6dp"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/glacial_indifference_bold"
                            android:background="@color/transparent_blur_side_menu"/>


                    </LinearLayout>




                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/trips_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_below="@id/profile_image_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_bold"
                        android:text="Trips"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:padding="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Trip_RecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/addTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:text="Plan another trip +"
                        android:padding="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/picturs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:orientation="vertical"
                    android:layout_below="@id/trips_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_indifference_bold"
                        android:text="Photos"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:padding="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Photo_RecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/addPhoto"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/glacial_indifference_regular"
                        android:layout_height="wrap_content"
                        android:text="Add another photo +"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:padding="16dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-16dp"
                    android:layout_below="@id/picturs_container">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgas"
                        android:padding="16dp"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>